{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "jsx": "react",
        "baseUrl": "./src",
        "lib": [
            "es2017",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
         ]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
