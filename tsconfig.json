{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./build",
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "jsx": "react",
        "baseUrl": "./src",
        "lib": [
            "ES2015",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}